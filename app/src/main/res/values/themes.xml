<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ITeach" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/secondColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primaryColor</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.ITeach.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.ITeach.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.ITeach.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomNavigationView">
        <item name="colorSecondaryContainer">@color/white</item>
    </style>

    <style name="WarehourseTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/secondColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="title">Ombor</item>
        <item name="android:statusBarColor">@color/primaryColor</item>
    </style>

    <style name="TransactionTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/secondColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="title">Tranzaksiyalar</item>
        <item name="android:statusBarColor">@color/primaryColor</item>
    </style>

    <style name="ClientTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/secondColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="title">Client</item>
        <item name="android:statusBarColor">@color/primaryColor</item>
    </style>

</resources>